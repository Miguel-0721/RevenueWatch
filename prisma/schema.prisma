generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())

  stripeAccounts StripeAccount[]
}

model StripeAccount {
  id              String   @id @default(cuid())
  stripeAccountId String   @unique
  status          String   @default("active")
  name            String?
  createdAt       DateTime @default(now())

  userId String?
  user   User?   @relation(fields: [userId], references: [id])
}

model StripeEvent {
  id              String   @id @default(cuid())
  stripeEventId   String   @unique
  type            String
  stripeAccountId String?
  payload         String // JSON stored as string (SQLite-safe)
  createdAt       DateTime @default(now())

  @@index([type])
  @@index([stripeAccountId])
}

model Alert {
  id              String   @id @default(cuid())
  type            String
  severity        String   @default("warning")
  stripeAccountId String?
  stripeEventId   String   @unique
  message         String

  context         String?   // âœ… MUST be String for SQLite

  windowStart     DateTime
  windowEnd       DateTime
  cooldownUntil   DateTime?
  createdAt       DateTime @default(now())

  @@index([type])
  @@index([severity])
  @@index([stripeAccountId])
}



model RevenueMetric {
  id              String   @id @default(cuid())
  stripeAccountId String?
  amount          Int // cents
  periodStart     DateTime
  periodEnd       DateTime

  // Phase B groundwork (no behavior change yet)
  hourOfDay       Int?
  dayOfWeek       Int?

  createdAt       DateTime @default(now())

  @@index([stripeAccountId])
  @@index([periodStart])
  @@index([dayOfWeek, hourOfDay])
}

